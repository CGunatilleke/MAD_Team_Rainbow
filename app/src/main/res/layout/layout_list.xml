<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/rsTextView"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/booktitle_offer_text"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/image1"
            android:text="Rs"
            android:textColor="#000"
            android:textSize="25sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/booktitle_offer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="31dp"
            android:layout_toRightOf="@id/image1"
            android:text="Name of book"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/offer_price_textRS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/booktitle_offer_text"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/image1"
            android:text="100"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/offer_descript_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/offer_price_textRS"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/image1"
            android:text="description about offer"
            android:textColor="#F44336"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/isbn_offer_text"
            android:layout_width="284dp"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="0dp"
            android:text="1234"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/addtoCartBtn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="9dp"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_baseline_add_shopping_cart_24"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>

